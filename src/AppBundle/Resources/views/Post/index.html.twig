{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <div>
        <div class="col-xs-2">
            <br />
            <img src="/uploads/{{ journal.photo }}" class="img-thumbnail">
        </div>
        <div class="col-xs-10">
            <br />
            <h2>{{ journal.title }}</h2>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('post_add', { 'journalId' : journal.id }) }}"><span class="btn btn-primary">Добавить новую статью</span></a>
                <br />
                <br />
            {% endif %}
        </div>
    </div>
    <div class="well">
        {% for p in posts %}
            <div class="row">
                <div class="col-xs-8">
                    <div class="journal-title">
                        <a href="{{ path('post_show',{'journalId' : journal.id, 'id' : p.id }) }}">{{ p.title }}</a>
                        <br />
                        <a href="{{ path('post_show',{'journalId' : journal.id, 'id' : p.id, 'type' : 'en' }) }}"><button class="btn btn-default">EN</button></a>
                        <a href="{{ path('post_show',{'journalId' : journal.id, 'id' : p.id, 'type' : 'pdf-ru' }) }}"><button class="btn btn-default">PDF Ru</button></a>
                        <a href="{{ path('post_show',{'journalId' : journal.id, 'id' : p.id, 'type' : 'pdf-en' }) }}"><button class="btn btn-default">PDF En</button></a>
                    </div>
                    <div class="journal-desc"><b>Авторы: </b>{{ p.author }}</div>
                </div>
                <div class="col-xs-2"></div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="col-xs-1">
                        <a href="{{ path('post_edit',{'journalId' : journal.id, 'id' : p.id }) }}"><span class="glyphicon glyphicon-edit text-warning">&nbsp;</span></a>
                        <a href="{{ path('post_remove',{'journalId' : journal.id, 'id' : p.id }) }}"><span class="glyphicon glyphicon-remove text-danger">&nbsp;</span></a>
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}